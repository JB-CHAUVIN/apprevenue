# ===== Server =====
PORT=3000
NODE_ENV=development
JWT_SECRET=change-me-to-a-random-string-64-chars

# ===== Admin credentials (for first login) =====
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=changeme123

# ===== AdMob (Google) =====
# Create OAuth2 credentials at https://console.cloud.google.com/apis/credentials
# Enable AdMob API at https://console.cloud.google.com/apis/library/admob.googleapis.com
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REFRESH_TOKEN=your-refresh-token
ADMOB_PUBLISHER_ID=pub-XXXXXXXXXXXXXXXX

# ===== App Store Connect (Apple) =====
# Create API Key at https://appstoreconnect.apple.com/access/api
# Download the .p8 file and place it in ./keys/
APPSTORE_ISSUER_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
APPSTORE_KEY_ID=XXXXXXXXXX
APPSTORE_KEY_PATH=./keys/AuthKey_XXXXXXXXXX.p8

# ===== Google Play Developer API =====
# Create service account at https://console.cloud.google.com/iam-admin/serviceaccounts
# Enable Google Play Android Developer API
# Grant access in Google Play Console > Settings > API access
GOOGLE_PLAY_SERVICE_ACCOUNT_PATH=./keys/google-play-service-account.json
GOOGLE_PLAY_PACKAGE_NAMES=com.yourapp.one,com.yourapp.two

# ===== Stripe =====
STRIPE_SECRET_KEY=sk_test_XXXXXXXXXXXXXXXXXXXXXXXXXXXX

# ===== Cron Schedule (default: every day at 6 AM) =====
CRON_SCHEDULE=0 6 * * *

# ===== Notifications (optional) =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your@email.com
SMTP_PASS=your-app-password
ALERT_EMAIL=alerts@example.com
