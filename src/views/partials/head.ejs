<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof siteName !== 'undefined' ? siteName : 'AppRevenue' %> Dashboard</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="<%= typeof theme !== 'undefined' ? theme.fonts.googleUrl : '' %>" rel="stylesheet">
  <style>
    :root {
      --bg-dark: <%= typeof theme !== 'undefined' ? theme.colors.bgDark : '#050816' %>;
      --bg-grid: <%= typeof theme !== 'undefined' ? theme.colors.bgGrid : 'rgba(255,255,255,0.03)' %>;
      --neon-cyan: <%= typeof theme !== 'undefined' ? theme.colors.neonCyan : '#00f0ff' %>;
      --neon-purple: <%= typeof theme !== 'undefined' ? theme.colors.neonPurple : '#a855f7' %>;
      --neon-pink: <%= typeof theme !== 'undefined' ? theme.colors.neonPink : '#ec4899' %>;
      --glass-white: <%= typeof theme !== 'undefined' ? theme.colors.glassWhite : 'rgba(255,255,255,0.05)' %>;
      --glass-border: <%= typeof theme !== 'undefined' ? theme.colors.glassBorder : 'rgba(255,255,255,0.1)' %>;
      --text: <%= typeof theme !== 'undefined' ? theme.colors.text : '#e2e8f0' %>;
      --text-muted: <%= typeof theme !== 'undefined' ? theme.colors.textMuted : '#94a3b8' %>;
      --font-display: 'Orbitron', sans-serif;
      --font-body: 'Space Grotesk', sans-serif;
      --font-mono: 'JetBrains Mono', monospace;
      --green: #22c55e;
      --red: #ef4444;
      --orange: #f59e0b;
      --sidebar-width: 260px;
    }
    *, *::before, *::after { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      font-family: var(--font-body);
      background: var(--bg-dark);
      color: var(--text);
      line-height: 1.5;
      min-height: 100vh;
    }
    body::before {
      content: '';
      position: fixed;
      inset: 0;
      background-image: radial-gradient(var(--bg-grid) 1px, transparent 1px);
      background-size: 30px 30px;
      pointer-events: none;
      z-index: 0;
    }

    /* === Glass Card === */
    .glass {
      background: var(--glass-white);
      backdrop-filter: blur(16px);
      -webkit-backdrop-filter: blur(16px);
      border: 1px solid var(--glass-border);
      border-radius: 16px;
      padding: 24px;
    }

    /* === Layout with Sidebar === */
    .layout { display: flex; min-height: 100vh; position: relative; z-index: 1; }
    .main-content {
      flex: 1;
      margin-left: var(--sidebar-width);
      padding: 32px;
      max-width: calc(100% - var(--sidebar-width));
    }

    /* === Stats Grid === */
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 16px;
      margin-bottom: 32px;
    }
    .stat-card {
      background: var(--glass-white);
      backdrop-filter: blur(16px);
      border: 1px solid var(--glass-border);
      border-radius: 16px;
      padding: 24px;
      position: relative;
      overflow: hidden;
    }
    .stat-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 3px;
    }
    .stat-card:nth-child(1)::before { background: var(--neon-cyan); }
    .stat-card:nth-child(2)::before { background: var(--neon-purple); }
    .stat-card:nth-child(3)::before { background: var(--green); }
    .stat-card:nth-child(4)::before { background: var(--neon-pink); }
    .stat-card .stat-icon {
      width: 40px;
      height: 40px;
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 12px;
      font-size: 20px;
    }
    .stat-card .label {
      font-size: 12px;
      color: var(--text-muted);
      text-transform: uppercase;
      letter-spacing: 0.08em;
      font-weight: 500;
    }
    .stat-card .value {
      font-family: var(--font-display);
      font-size: 28px;
      font-weight: 700;
      margin-top: 4px;
    }
    .stat-card .value.cyan { color: var(--neon-cyan); }
    .stat-card .value.green { color: var(--green); }
    .stat-card .value.purple { color: var(--neon-purple); }
    .stat-card .value.pink { color: var(--neon-pink); }

    /* === Section === */
    .section { margin-bottom: 32px; }
    .section h2 {
      font-family: var(--font-display);
      font-size: 16px;
      font-weight: 600;
      margin-bottom: 16px;
      color: var(--text);
      letter-spacing: 0.02em;
    }

    /* === Card === */
    .card {
      background: var(--glass-white);
      backdrop-filter: blur(16px);
      border: 1px solid var(--glass-border);
      border-radius: 16px;
      padding: 24px;
    }

    /* === Tables === */
    table { width: 100%; border-collapse: collapse; font-size: 14px; }
    th {
      text-align: left;
      padding: 12px 16px;
      color: var(--text-muted);
      border-bottom: 1px solid var(--glass-border);
      font-weight: 500;
      font-size: 12px;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }
    td {
      padding: 12px 16px;
      border-bottom: 1px solid rgba(255,255,255,0.05);
    }
    tr:hover td { background: rgba(255,255,255,0.02); }

    /* === Badges === */
    .badge {
      display: inline-block;
      padding: 3px 10px;
      border-radius: 20px;
      font-size: 11px;
      font-weight: 600;
      letter-spacing: 0.03em;
    }
    .badge-success { background: rgba(34,197,94,0.15); color: var(--green); }
    .badge-error { background: rgba(239,68,68,0.15); color: var(--red); }
    .badge-warn { background: rgba(245,158,11,0.15); color: var(--orange); }
    .badge-platform { background: rgba(0,240,255,0.1); color: var(--neon-cyan); margin-right: 4px; }
    .badge-pro {
      background: linear-gradient(135deg, var(--neon-cyan), var(--neon-purple));
      color: var(--bg-dark);
      font-family: var(--font-display);
      font-size: 10px;
      padding: 2px 8px;
    }
    .badge-free {
      background: rgba(255,255,255,0.1);
      color: var(--text-muted);
      font-size: 10px;
      padding: 2px 8px;
    }

    /* === Charts === */
    .chart-container { position: relative; height: 300px; }

    /* === Toolbar === */
    .toolbar {
      display: flex;
      gap: 12px;
      align-items: center;
      margin-bottom: 24px;
      flex-wrap: wrap;
    }

    /* === Buttons === */
    .btn {
      display: inline-block;
      padding: 10px 20px;
      border: none;
      border-radius: 12px;
      font-family: var(--font-body);
      font-size: 14px;
      font-weight: 600;
      cursor: pointer;
      text-decoration: none;
      transition: box-shadow 0.3s, transform 0.2s;
    }
    .btn-neon {
      background: var(--neon-cyan);
      color: var(--bg-dark);
    }
    .btn-neon:hover {
      box-shadow: 0 0 20px rgba(0, 240, 255, 0.4);
      transform: translateY(-1px);
    }
    .btn-outline {
      background: transparent;
      border: 1px solid var(--glass-border);
      color: var(--text);
    }
    .btn-outline:hover {
      border-color: var(--neon-cyan);
      color: var(--neon-cyan);
    }
    .btn-sm { padding: 6px 14px; font-size: 12px; border-radius: 8px; }
    .btn-danger { background: rgba(239,68,68,0.2); color: var(--red); border: 1px solid rgba(239,68,68,0.3); }

    /* === Select === */
    select {
      background: rgba(255,255,255,0.05);
      color: var(--text);
      border: 1px solid var(--glass-border);
      padding: 8px 12px;
      border-radius: 10px;
      font-size: 14px;
      font-family: var(--font-body);
      backdrop-filter: blur(8px);
    }
    select:focus { outline: none; border-color: var(--neon-cyan); }

    /* === Form Elements === */
    .form-group { margin-bottom: 20px; }
    .form-group label {
      display: block;
      font-size: 13px;
      color: var(--text-muted);
      margin-bottom: 6px;
      font-weight: 500;
    }
    .form-group input, .form-group textarea {
      width: 100%;
      padding: 12px 16px;
      background: rgba(255,255,255,0.05);
      border: 1px solid var(--glass-border);
      border-radius: 12px;
      color: var(--text);
      font-size: 14px;
      font-family: var(--font-body);
      transition: border-color 0.2s;
    }
    .form-group input:focus, .form-group textarea:focus {
      outline: none;
      border-color: var(--neon-cyan);
      box-shadow: 0 0 0 3px rgba(0,240,255,0.1);
    }
    .form-group textarea { resize: vertical; min-height: 100px; font-family: var(--font-mono); font-size: 13px; }

    /* === Login/Register Box === */
    .auth-box {
      max-width: 440px;
      margin: 80px auto;
      background: var(--glass-white);
      backdrop-filter: blur(16px);
      border: 1px solid var(--glass-border);
      border-radius: 20px;
      padding: 48px 40px;
      position: relative;
      z-index: 1;
    }
    .auth-box h2 {
      font-family: var(--font-display);
      text-align: center;
      margin-bottom: 8px;
      font-size: 24px;
      background: linear-gradient(135deg, var(--neon-cyan), var(--neon-purple));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    .auth-box .subtitle {
      text-align: center;
      color: var(--text-muted);
      font-size: 14px;
      margin-bottom: 32px;
    }
    .auth-box .auth-link {
      text-align: center;
      margin-top: 20px;
      font-size: 14px;
      color: var(--text-muted);
    }
    .auth-box .auth-link a { color: var(--neon-cyan); text-decoration: none; }
    .auth-box .auth-link a:hover { text-decoration: underline; }

    /* === Alerts === */
    .alert {
      padding: 12px 20px;
      border-radius: 12px;
      margin-bottom: 20px;
      font-size: 14px;
    }
    .alert-error { background: rgba(239,68,68,0.1); border: 1px solid rgba(239,68,68,0.3); color: var(--red); }
    .alert-success { background: rgba(34,197,94,0.1); border: 1px solid rgba(34,197,94,0.3); color: var(--green); }
    .alert-info { background: rgba(0,240,255,0.1); border: 1px solid rgba(0,240,255,0.3); color: var(--neon-cyan); }

    /* === Page Header === */
    .page-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 32px;
      flex-wrap: wrap;
      gap: 16px;
    }
    .page-header h1 {
      font-family: var(--font-display);
      font-size: 22px;
      font-weight: 700;
    }

    /* === App Info Bar === */
    .app-info-bar {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 16px 0;
    }
    .app-info-bar .app-name { font-size: 16px; font-weight: 600; }

    /* === Gradient text === */
    .gradient-text {
      background: linear-gradient(135deg, var(--neon-cyan), var(--neon-purple));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    /* === Steps (for settings pages) === */
    .steps { margin-bottom: 32px; }
    .step {
      display: flex;
      gap: 16px;
      margin-bottom: 16px;
      align-items: flex-start;
    }
    .step-number {
      width: 32px;
      height: 32px;
      border-radius: 50%;
      background: rgba(0,240,255,0.15);
      color: var(--neon-cyan);
      display: flex;
      align-items: center;
      justify-content: center;
      font-family: var(--font-display);
      font-size: 14px;
      font-weight: 700;
      flex-shrink: 0;
    }
    .step-text { font-size: 14px; color: var(--text-muted); line-height: 1.6; padding-top: 4px; }
    .step-text code {
      background: rgba(255,255,255,0.1);
      padding: 2px 6px;
      border-radius: 4px;
      font-family: var(--font-mono);
      font-size: 13px;
      color: var(--neon-cyan);
    }

    /* === Test button feedback === */
    .test-result {
      display: none;
      padding: 12px 16px;
      border-radius: 12px;
      margin-top: 12px;
      font-size: 14px;
    }
    .test-result.success { display: block; background: rgba(34,197,94,0.1); border: 1px solid rgba(34,197,94,0.3); color: var(--green); }
    .test-result.error { display: block; background: rgba(239,68,68,0.1); border: 1px solid rgba(239,68,68,0.3); color: var(--red); }

    /* === Responsive === */
    @media (max-width: 768px) {
      :root { --sidebar-width: 0px; }
      .sidebar { transform: translateX(-100%); }
      .sidebar.open { transform: translateX(0); z-index: 1000; }
      .main-content { margin-left: 0; max-width: 100%; padding: 16px; }
      .mobile-toggle { display: flex !important; }
      .stats-grid { grid-template-columns: 1fr 1fr; }
      .page-header h1 { font-size: 18px; }
    }
    @media (max-width: 480px) {
      .stats-grid { grid-template-columns: 1fr; }
      .auth-box { margin: 40px 16px; padding: 32px 24px; }
    }
  </style>
</head>
<body>
