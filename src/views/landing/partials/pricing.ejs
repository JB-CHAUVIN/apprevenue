<section id="pricing">
  <div class="container">
    <h2 class="section-title"><%= t('pricing.sectionTitle') %></h2>
    <p class="section-subtitle"><%= t('pricing.sectionSubtitle') %></p>

    <div class="pricing-card-wrapper">
      <div class="glass pricing-card">
        <div class="pricing-badge"><%= t('pricing.badge') %></div>
        <div class="pricing-amount">
          <span class="pricing-price"><%= t('pricing.price') %></span>
          <span class="pricing-period">/ <%= t('pricing.period') %></span>
        </div>
        <ul class="pricing-features">
          <% i18n.pricing.features.forEach(function(f) { %>
          <li>
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="var(--neon-cyan)" stroke-width="2"><polyline points="20,6 9,17 4,12"/></svg>
            <span><%= f %></span>
          </li>
          <% }); %>
        </ul>
        <a href="/login" class="btn-neon" style="width:100%;text-align:center;"><%= t('pricing.cta') %></a>
      </div>
    </div>
  </div>
</section>

<style>
  .pricing-card-wrapper {
    display: flex;
    justify-content: center;
  }
  .pricing-card {
    max-width: 400px;
    width: 100%;
    text-align: center;
    position: relative;
    border-top: 2px solid var(--neon-cyan);
  }
  .pricing-badge {
    display: inline-block;
    background: var(--neon-cyan);
    color: var(--bg-dark);
    font-family: var(--font-display);
    font-size: 0.8rem;
    font-weight: 700;
    padding: 4px 16px;
    border-radius: 20px;
    letter-spacing: 0.1em;
    margin-bottom: 20px;
  }
  .pricing-amount {
    margin-bottom: 28px;
  }
  .pricing-price {
    font-family: var(--font-display);
    font-size: 3.5rem;
    font-weight: 800;
  }
  .pricing-period {
    color: var(--text-muted);
    font-size: 1.1rem;
  }
  .pricing-features {
    list-style: none;
    text-align: left;
    margin-bottom: 32px;
  }
  .pricing-features li {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 8px 0;
    font-size: 0.95rem;
    color: var(--text-muted);
    border-bottom: 1px solid var(--glass-border);
  }
  .pricing-features li:last-child { border-bottom: none; }
  [dir="rtl"] .pricing-features { text-align: right; }
  [dir="rtl"] .pricing-features li { flex-direction: row-reverse; }
</style>
